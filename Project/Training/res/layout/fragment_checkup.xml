<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NuraBG">

    <Button
        android:id="@+id/btcheckup_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="100dp"
        android:layout_toLeftOf="@+id/btcheckup_canister"
        android:background="@drawable/scansearchmedicine"/>

    <Button
        android:id="@+id/btcheckup_canister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/scansearchcanister"/>
    <Button
        android:id="@+id/btcheckup_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        android:layout_toRightOf="@id/btcheckup_canister"
        android:background="@drawable/scansearchpatient"/>



</RelativeLayout>


